extends layout

block content

  h1 ຮ້ານນ້ອຍອາໄຫລ່
  form(method="POST", action="/posts/search")
   .form-group
    input.form-control(style="font-size:2em",name='name', type='text', placeholder='ຊື່ສິນຄ້າ')
   center
    input.btn.btn-primary.btn-lg(type='submit', name='submit', value="ຄົ້ນຫາ")
  br
  br
  
  if items
   p(style="font-size:1em") ຜົນການຄົ້ນຫາ "#{keyword}"
   center
    table.table.table-striped
     thead
      tr
       th(scope='col') ຮູບ
       th(scope='col') ຊື່ສິນຄ້າ
       th(scope='col') ລາຄາ
       th(scope='col') ຫົວໜ່ວຍ
     tbody
      each item, i in items
       tr
        th(scope='row', width="230")
         img(src='/' + item.productimage, width="225")
        td
         h3 #{item.name}
        td 
         h2
          font(color="red") #{item.price}
        td
         h2
          if item.measure == 1
           | ແກັດ
          else if item.measure == 2
           | ອັນ
          else if item.measure == 3
           | ໂຫຼ
          else
           | ບໍ່ລະບຸ