extends layout

block content
 if errors
  each error, i  in errors
   div.alert.alert-danger #{error.msg}
 h1 ແກ້ໄຂສິນຄ້າ
 form(method="POST", enctype='multipart/form-data')
  .form-group
   input.form-control(style="font-size:2em",name='name', type='text', placeholder='ຊື່ສິນຄ້າ', value=item.name)
  .form-group
   input.form-control(style="font-size:2em",name='price', type='text', placeholder='ລາຄາສິນຄ້າ', value=item.price)
  .form-group
    .form-check.form-check-inline
    label.form-check-label(style="font-size:2em")
        input#inlineRadio1.form-check-input(type='radio', name='measure', value='1', style="height: 1.5em;", checked=item.measure==1)
        |  ແກັດ
    .form-check.form-check-inline
    label.form-check-label(style="font-size:2em")
        input#inlineRadio2.form-check-input(type='radio', name='measure', value='2', style="height: 1.5em;", checked=item.measure==2)
        |  ອັນ

    .form-check.form-check-inline
    label.form-check-label(style="font-size:2em")
        input#inlineRadio2.form-check-input(type='radio', name='measure', value='3', style="height: 1.5em;", checked=item.measure==3)
        |  ໂຫຼ

  img(src="/"+item.productimage, width=225)
  input(type="hidden", name="img", value=item.productimage)
  .form-group
     label ຮູບສິນຄ້າ (ບໍ່ໃສ່ກໍ່ໄດ້)
     input.form-control(name='productImg', type='file')
  center
   input.btn.btn-primary.btn-lg(type='submit', name='submit', value="ແກ້ໄຂ")